@model Videoteka.ViewModels.MovieViewModel
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="page-header">Izmjena filma</h2>

@using (Html.BeginForm("Edit", "Movies", FormMethod.Post))
{

    @Html.HiddenFor(model => model.Id)

    <div class="form-group">
        @Html.LabelFor(model => model.Title, new { @class = "control-label" })
        @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.DateOfMovie, new { @class = "control-label" })
        @Html.EditorFor(model => model.DateOfMovie, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.DateOfMovie, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.NumberInStock, new { @class = "control-label" })
        @Html.EditorFor(model => model.NumberInStock, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.NumberInStock, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.GenreId, new { @class = "control-label" })
        @Html.DropDownListFor(model => model.GenreId, (SelectList)ViewBag.Genres, "Izaberite žanr", new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.GenreId, "", new { @class = "text-danger" })
    </div>
    @Html.AntiForgeryToken()
<div class="form-group">
    @Html.ActionLink("Nazad", "Index", "Movies", null, new { @class = "btn btn-default" })
    <input type="submit" value="Sačuvaj izmjene" class="btn btn-primary" />
</div>
}
